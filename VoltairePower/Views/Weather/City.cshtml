@model VoltairePower.Models.Weather.City

@{
    Layout = "~/Views/Shared/_Layout_Authorized_Customers.cshtml";
    ViewData["Title"] = "City";
}

<div class="container">

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <h4>Forecast for the city of @Model.Name</h4>

            <i class="fas fa-globe"></i><label asp-for="Name"></label>
            <span class="badge">@Model.Name</span>
            <br />

            <i class="fas fa-temperature-high"></i><label asp-for="Temp"></label>
            <span class="badge">@Model.Temp °C</span>
            <br />

            <i class="fas fa-tint"></i><label asp-for="Humidity"></label>
            <span class="badge">@Model.Humidity %</span>
            <br />

            <i class="far fa-gem"></i><label asp-for="Pressure"></label>
            <span class="badge">@Model.Pressure Hpa</span>
            <br />

            <i class="fas fa-wind"></i><label asp-for="Wind"></label>
            <span class="badge">@Model.Wind Km/h</span>
            <br />

            <i class="fab fa-skyatlas"></i><label asp-for="Weather"></label>
            <span class="badge">@Model.Weather</span>
            <br />

            <i class="fas fa-cloud"></i><label asp-for="Clouds"></label>
            <span class="badge">@Model.Clouds </span>
            <br />

            <i class="fas fa-sun"></i><label asp-for="Sunshine"></label>
            <span class="badge">@Model.Sunshine </span>
            <br />

            @*<label asp-for="Sunrise"></label>
            <span class="badge">@Model.Sunrise </span>
            <br />*@

        </div>

    </div>

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

        </div>

    </div>

</div>