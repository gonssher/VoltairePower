@model VoltairePower.Models.SolarSheetDetail

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/styleLogn.css" />
<h4>Solar Panel Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SolarSize" class="control-label"></label>
                <input asp-for="SolarSize" class="form-control" />
                <span asp-validation-for="SolarSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @Html.DropDownList("Type", new SelectList(Enum.GetValues(typeof(SolarPlantType))), "--Select Solar Plant Type--",
                      new { @class = "form-control" })
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberofInverters" class="control-label"></label>
                <input asp-for="NumberofInverters" class="form-control" />
                <span asp-validation-for="NumberofInverters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InverterMakes" class="control-label"></label>

                @Html.DropDownList("InverterMakes", new SelectList(Enum.GetValues(typeof(InverterMake))), "--Select Inverter Make--",
                    new { @class = "form-control" })
                <span asp-validation-for="InverterMakes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InverterModel" class="control-label"></label>
                @Html.DropDownList("InverterModel", new SelectList(Enum.GetValues(typeof(InverterModels))), "--Select Inverter Model--",
                      new { @class = "form-control" })
                <span asp-validation-for="InverterModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InverterSize" class="control-label"></label>
                <input asp-for="InverterSize" class="form-control" />
                <span asp-validation-for="InverterSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfSolarStrings" class="control-label"></label>
                <input asp-for="NumberOfSolarStrings" class="form-control" />
                <span asp-validation-for="NumberOfSolarStrings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SolarStringsolarConnection" class="control-label"></label>
                @Html.DropDownList("SolarStringsolarConnection", new SelectList(Enum.GetValues(typeof(SolarStringsolarConnectionType))),
       "--Select Connection Type--", new { @class = "form-control" })
                <span asp-validation-for="SolarStringsolarConnection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SolarStringsolarModel" class="control-label"></label>
                <input asp-for="SolarStringsolarModel" class="form-control" />
                <span asp-validation-for="SolarStringsolarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfWatts" class="control-label"></label>
                <input asp-for="NumberOfWatts" class="form-control" />
                <span asp-validation-for="NumberOfWatts" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vmpp" class="control-label"></label>
                <input asp-for="Vmpp" class="form-control" />
                <span asp-validation-for="Vmpp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voc" class="control-label"></label>
                <input asp-for="Voc" class="form-control" />
                <span asp-validation-for="Voc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Impp" class="control-label"></label>
                <input asp-for="Impp" class="form-control" />
                <span asp-validation-for="Impp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isc" class="control-label"></label>
                <input asp-for="Isc" class="form-control" />
                <span asp-validation-for="Isc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TemCoeffoicient" class="control-label"></label>
                <input asp-for="TemCoeffoicient" class="form-control" />
                <span asp-validation-for="TemCoeffoicient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
